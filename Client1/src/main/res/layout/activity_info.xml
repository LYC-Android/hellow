<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:src="@drawable/red_bird"
          />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="30dp"
            android:paddingStart="50dp"
            android:paddingTop="20dp"
            android:textColorHint="#c5c5c5"
            app:hintTextAppearance="@style/CustomTextAppearance">

            <EditText
                android:id="@+id/realName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit"
                android:hint="真实姓名"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textCursorDrawable="@drawable/bg_input_cursor"
                android:textSize="20sp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="30dp"
            android:paddingStart="50dp"
            android:paddingTop="20dp"
            android:textColorHint="#c5c5c5"
            app:hintTextAppearance="@style/CustomTextAppearance">

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit"
                android:hint="年龄"
                android:inputType="number"
                android:textColor="#000000"
                android:textCursorDrawable="@drawable/bg_input_cursor"
                android:textSize="20sp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="30dp"
            android:paddingStart="50dp"
            android:paddingTop="20dp"
            android:textColorHint="#c5c5c5"
            app:hintTextAppearance="@style/CustomTextAppearance">

            <EditText
                android:id="@+id/medical_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit"
                android:hint="病历号"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textCursorDrawable="@drawable/bg_input_cursor"
                android:textSize="20sp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="30dp"
            android:paddingStart="50dp"
            android:paddingTop="20dp"
            android:textColorHint="#c5c5c5"
            app:hintTextAppearance="@style/CustomTextAppearance">

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit"
                android:hint="手机号"
                android:inputType="number"
                android:textColor="#000000"
                android:textCursorDrawable="@drawable/bg_input_cursor"
                android:textSize="20sp"
                />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/png_sex"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingEnd="30dp"
                android:paddingStart="50dp"

                android:paddingTop="20dp"
                >

                <CheckBox
                    android:id="@+id/boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:hint="男"
                    android:textSize="20sp"
                    android:theme="@style/MyCheckStyle"
                    />

                <CheckBox
                    android:id="@+id/girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:hint="女"
                    android:textSize="20sp"
                    android:theme="@style/MyCheckStyle"
                    />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/register"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/subit_button"
            android:text="更新"
            />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progress"
            style="AVLoadingIndicatorView.Large"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:indicatorColor="#FF0033"
            app:indicatorName="BallClipRotateIndicator"
            />
    </LinearLayout>

</ScrollView>
